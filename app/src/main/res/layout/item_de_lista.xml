<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blueviolet"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkturquoise"
            android:orientation="horizontal"
            android:padding="6dp">
        <ImageView
            android:id="@+id/fotoActividad"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            app:srcCompat="@drawable/jaikerazabi"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/fotoActividad"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/fotoActividad">

            <TextView
                android:id="@+id/tituloActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/whitesmoke"
                android:text="RESGUARDO INDIGENA"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/descripcionActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Jaikerazabi - Etnia Embera"
                android:paddingTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/whitesmoke"/>
                <TextView
                    android:id="@+id/verMas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:text="VER MAS +"
                    android:paddingTop="30dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>


            </LinearLayout>

         </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>